<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--FIXME: change the namespace、id and resultType-->
<mapper namespace="com.zhiyiyo.crm.workbench.dao.ActivityRemarkDao">
    <select id="queryRemarkCountByIds" resultType="int">
        select count(*)
        from tbl_activity_remark
        where activityId in
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>

    <delete id="deleteRemarkByActivityIds">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>

    <select id="queryRemarksByAId" resultType="ActivityRemark">
        select id,
               noteContent,
               createTime,
               createBy,
               editTime,
               editBy,
               activityId
        from tbl_activity_remark
        where activityId = #{id}
        order by createTime desc
    </select>

    <insert id="insertRemark">
        insert into tbl_activity_remark value (#{id}, #{noteContent}, #{createTime}, #{createBy}, #{editTime},
                                               #{editBy}, #{activityId})
    </insert>

    <update id="updateRemark">
        update tbl_activity_remark
        set noteContent=#{noteContent},
            editBy=#{editBy},
            editTime=#{editTime}
        where id = #{id}
    </update>
</mapper>