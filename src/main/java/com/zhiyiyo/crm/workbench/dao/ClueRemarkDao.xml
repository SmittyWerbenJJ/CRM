<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhiyiyo.crm.workbench.dao.ClueRemarkDao">
    <insert id="insertRemark">
        insert into tbl_clue_remark
            value (
                   #{id},
                   #{noteContent},
                   #{createTime},
                   #{createBy},
                   #{editTime},
                   #{editBy},
                   #{clueId}
            )
    </insert>

    <select id="queryRemarksByCId" resultType="ClueRemark">
        select id,
               noteContent,
               createTime,
               createBy,
               editTime,
               editBy,
               clueId
        from tbl_clue_remark
        where clueId = #{id}
        order by createTime desc
    </select>

    <update id="updateRemark">
        update tbl_clue_remark
        set noteContent=#{noteContent},
            editBy=#{editBy},
            editTime=#{editTime}
        where id = #{id}
    </update>

    <delete id="deleteRemark">
        delete
        from tbl_clue_remark
        where id = #{id}
    </delete>
</mapper>